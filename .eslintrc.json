{
  "parser": "@babel/eslint-parser",
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "plugins": ["prettier", "react", "react-hooks"],
  "rules": {
    "no-undef": 2,
    "no-unused-vars": 2,
    "arrow-parens": ["error", "as-needed"],
    "no-useless-escape": 0,
    "prettier/prettier": "error",
    "react/jsx-key": 0,
    "react/prefer-es6-class": 1,
    "react/prop-types": 0,
    "react/no-deprecated": 0, // have to turn it on in future
    "react/no-string-refs": 0, // should check in future
    "react/display-name": 0,
    "react-hooks/rules-of-hooks": "error" // Checks rules of Hooks
    // "react-client.js.hooks/exhaustive-deps": "warn" // Checks effect dependenciesarrow-parens
  }
}
